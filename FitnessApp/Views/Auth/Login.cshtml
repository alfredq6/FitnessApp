@using FitnessApp.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="card" data-theme="dark">
        <div class="card-body">
            <h2 class="card-title text-center mb-4 fw-bold"><i class="fas fa-sign-in-alt me-2"></i>Вход</h2>
            <form method="post" asp-action="Login" asp-controller="Auth">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Имя пользователя</label>
                    <input asp-for="Username" class="form-control" data-theme="dark" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <input asp-for="Password" class="form-control" type="password" data-theme="dark" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["ErrorMessage"]
                    </div>
                }
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary" data-theme="dark">Войти</button>
                    <a href="/Auth/Register" class="btn btn-outline-custom" data-theme="dark">Регистрация</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}