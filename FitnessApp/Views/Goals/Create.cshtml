@model WorkoutGoal

@{
    ViewData["Title"] = "Создать цель";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="mb-4 fw-bold"><i class="fas fa-bullseye me-2"></i>Создать цель</h2>

    <div class="card" data-theme="dark">
        <div class="card-body">
            <form asp-action="Create" asp-controller="Goals" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Type" class="form-label">Тип цели</label>
                    <select asp-for="Type" class="form-select" data-theme="dark">
                        <option value="Count">Количество тренировок</option>
                        <option value="Duration">Время тренировок</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Period" class="form-label">Период</label>
                    <select asp-for="Period" class="form-select" data-theme="dark">
                        <option value="Week">Неделя</option>
                        <option value="Month">Месяц</option>
                        <option value="Custom">Пользовательский</option>
                    </select>
                    <span asp-validation-for="Period" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TargetValue" class="form-label">Целевое значение</label>
                    <input asp-for="TargetValue" class="form-control" type="number" data-theme="dark" />
                    <span asp-validation-for="TargetValue" class="text-danger"></span>
                    <small class="text-light" data-theme="dark">Для тренировок — количество или минуты.</small>
                </div>

                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label">Дата начала</label>
                    <input asp-for="StartDate" class="form-control" type="date" data-theme="dark" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EndDate" class="form-label">Дата окончания</label>
                    <input asp-for="EndDate" class="form-control" type="date" data-theme="dark" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary" data-theme="dark"><i class="fas fa-save me-2"></i>Создать</button>
                    <a href="/Goals/Index" class="btn btn-outline-custom" data-theme="dark"><i class="fas fa-arrow-left me-2"></i>Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}