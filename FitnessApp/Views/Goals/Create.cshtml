@{
    ViewData["Title"] = "Добавить цель";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="mb-4 fw-bold"><i class="fas fa-plus-circle me-2"></i>Добавить цель</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger animate__animated animate__fadeIn" data-theme="dark">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <div class="card p-4" data-theme="dark">
        <form method="post" action="/Goals/Create">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label"><i class="fas fa-list-ul me-2"></i>Тип цели</label>
                <select name="type" class="form-select" data-theme="dark" required>
                    <option value="Count">Количество тренировок</option>
                    <option value="Duration">Общее время (минуты)</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label"><i class="fas fa-bullseye me-2"></i>Целевое значение</label>
                <input type="number" name="targetValue" class="form-control" data-theme="dark" min="1" required />
            </div>
            <div class="mb-3">
                <label class="form-label"><i class="fas fa-calendar-week me-2"></i>Период</label>
                <select name="period" class="form-select" data-theme="dark" required>
                    <option value="Week">Неделя</option>
                    <option value="Month">Месяц</option>
                </select>
            </div>
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Создать</button>
                <a href="/Goals/Index" class="btn btn-outline-custom" data-theme="dark"><i class="fas fa-arrow-left me-2"></i>Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}