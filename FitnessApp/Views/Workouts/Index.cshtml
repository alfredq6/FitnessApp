@model List<Workout>

@{
    ViewData["Title"] = "Мои тренировки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="mb-4 fw-bold"><i class="fas fa-running me-2"></i>Мои тренировки</h2>

    <p>
        <a href="/Workouts/Create" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Добавить тренировку</a>
    </p>

    @if (Model.Any())
    {
        <table class="table table-bordered" data-theme="dark">
            <thead class="table-primary" data-theme="dark">
                <tr>
                    <th>Дата</th>
                    <th>Название</th>
                    <th>Продолжительность (мин)</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var workout in Model)
                {
                    <tr>
                        <td>@workout.Date.ToString("dd.MM.yyyy")</td>
                        <td>@workout.Name</td>
                        <td>@workout.Duration</td>
                        <td>
                            <a href="/Workouts/Edit/@workout.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit me-1"></i>Редактировать</a>
                            <form method="post" action="/Workouts/Delete" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@workout.Id" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Удалить тренировку?');"><i class="fas fa-trash me-1"></i>Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-light" data-theme="dark">У вас пока нет тренировок.</p>
    }
</div>