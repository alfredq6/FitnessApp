@using FitnessApp.ViewModels
@model WorkoutViewModel

@{
    ViewData["Title"] = "Добавить тренировку";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить тренировку</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="error">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form method="post" action="/Workouts/Create">
    @Html.AntiForgeryToken() <!-- Добавляем токен -->
    <div class="form-group">
        <label asp-for="Date">Дата:</label>
        <input asp-for="Date" required />
        <span asp-validation-for="Date" class="error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Название:</label>
        <input asp-for="Name" required />
        <span asp-validation-for="Name" class="error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration">Продолжительность (мин):</label>
        <input asp-for="Duration" min="1" required />
        <span asp-validation-for="Duration" class="error"></span>
    </div>
    <div class="form-group">
        <button type="submit">Добавить</button>
    </div>
</form>

<style>
    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: #555;
    }

    input[type="date"], input[type="text"], input[type="number"] {
        width: 100%;
        max-width: 300px;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }

    button {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3;
        }

    .error {
        color: red;
    }
</style>